{
  "name": "playwright-mcp-server",
  "version": "0.1.0",
  "description": "Browser automation MCP server using Playwright for AI agents to diagnose web application issues",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "playwright-mcp-server": "dist/server.js"
  },
  "files": [
